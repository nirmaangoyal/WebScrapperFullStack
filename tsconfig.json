{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./backend",
    "typeRoots": ["./node_modules/@types", "./backend/types"],
    "types": ["node", "express", "express-session"],
    "baseUrl": "./",
    "paths": {
      "@backend/*": ["backend/*"]
    }
  },
  "include": ["backend/**/*"],
  "exclude": ["node_modules", "frontend"]
}
